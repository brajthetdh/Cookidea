<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cookidea.Views.WebViewPage">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="FavIcon"
                     Order="Primary" 
                     Icon="star.png" 
                     Priority="0" 
                     Command="{Binding CmdFavTapped}"/>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout>
            <ProgressBar x:Name="ProgressLoadingWeb"
                         Progress="0.2"
                         HorizontalOptions="FillAndExpand" 
                         IsVisible="True"/>

            <WebView x:Name="WebViewRecipePage"
                        HeightRequest="1000"
                        WidthRequest="1000"
                        VerticalOptions="FillAndExpand"
                        Navigating="WebView_OnNavigating"
                        Navigated="WebView_OnNavigated"
                        Source="{Binding TouchedRecipeUrl}"
                        Grid.Column="0"
                        Grid.Row="0"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>